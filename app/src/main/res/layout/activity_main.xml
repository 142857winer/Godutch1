<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cqu_cqu.godutch.MainActivity">

    <TextView
        android:id="@+id/tvamount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/tvamount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:id="@+id/etamount" />

    <TextView
        android:text="Nbr pers."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/tvNbr"
        android:layout_below="@+id/etamount"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/tvNbr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:id="@+id/etNbr" />

    <TextView
        android:text="AMOUNT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNbr"
        android:textSize="40sp"
        android:layout_margin="40dp"
        android:id="@+id/tvamountperPerson"
        android:textAlignment="center"
        />

    <Button
        android:text="Go Dutch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:id="@+id/btnCompute"
        android:onClick="btnCompute"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_alignTop="@+id/tvamountperPerson"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Take a photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCompute"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:id="@+id/btnTakePhoto"
        android:onClick="btnTakePhoto"/>
</RelativeLayout>
